    <script>
    function matchpassword() {
     let a = document.getElementById("pass").value;   
     let b = document.getElementById("cpass").value; 
    if(b!=a){
        alert('Passwords do not match!');
        }
    else{
        alert('Passwords matches!');
        }
    }
